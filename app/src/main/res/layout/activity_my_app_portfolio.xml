<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyAppPortfolio">

    <TextView
        android:text="@string/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="23sp"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_button_height"
        android:text="Spotify Streamer"
        android:id="@+id/button_spotify"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_button_margin_left_right"
        android:layout_marginRight="@dimen/activity_button_margin_left_right"
        android:layout_marginBottom="@dimen/activity_button_margin_top_bottom"
        android:layout_marginTop="@dimen/activity_button_margin_top_bottom"
        android:background="#F08C35"
        android:onClick="message"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_button_height"
        android:text="Scores App"
        android:id="@+id/button_scores"
        android:layout_below="@id/button_spotify"
        android:layout_marginLeft="@dimen/activity_button_margin_left_right"
        android:layout_marginRight="@dimen/activity_button_margin_left_right"
        android:layout_marginTop="@dimen/activity_button_margin_top_bottom"
        android:layout_marginBottom="@dimen/activity_button_margin_top_bottom"
        android:background="#F08C00"
        android:onClick="message"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_button_height"
        android:text="Library App"
        android:id="@+id/button_library"
        android:layout_below="@id/button_scores"
        android:layout_marginLeft="@dimen/activity_button_margin_left_right"
        android:layout_marginRight="@dimen/activity_button_margin_left_right"
        android:layout_marginTop="@dimen/activity_button_margin_top_bottom"
        android:layout_marginBottom="@dimen/activity_button_margin_top_bottom"
        android:background="#F08C00"
        android:onClick="message"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_button_height"
        android:text="Build It Bigger"
        android:id="@+id/button_build"
        android:layout_below="@id/button_library"
        android:layout_marginLeft="@dimen/activity_button_margin_left_right"
        android:layout_marginRight="@dimen/activity_button_margin_left_right"
        android:layout_marginTop="@dimen/activity_button_margin_top_bottom"
        android:layout_marginBottom="@dimen/activity_button_margin_top_bottom"
        android:background="#F08C00"
        android:onClick="message"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button_xyz"
        android:layout_below="@id/button_build"
        android:layout_marginLeft="@dimen/activity_button_margin_left_right"
        android:layout_marginRight="@dimen/activity_button_margin_left_right"
        android:layout_marginTop="@dimen/activity_button_margin_top_bottom"
        android:layout_marginBottom="@dimen/activity_button_margin_top_bottom"
        android:background="#F08C00"
        android:onClick="message"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/button_capstone"
        android:layout_below="@id/button_xyz"
        android:layout_marginLeft="@dimen/activity_button_margin_left_right"
        android:layout_marginRight="@dimen/activity_button_margin_left_right"
        android:layout_marginTop="@dimen/activity_button_margin_top_bottom"
        android:layout_marginBottom="@dimen/activity_button_margin_top_bottom"
        android:background="#F08C"
        android:onClick="message"/>

</RelativeLayout>
